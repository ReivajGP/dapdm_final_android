<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.TicketSummaryActivity">

        <TextView
            android:id="@+id/tv_ticket_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Ticket number"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_menu"
            app:layout_constraintTop_toBottomOf="@id/tv_ticket_number"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/tv_contact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/riv_profile"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Contacto:"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contact_title"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Nombre:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contact_name"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Teléfono:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_contact_phone"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Fecha"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_event_date"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Hora"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tv_event_sets_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_event_time"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Turnos"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_paid_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_event_sets_number"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Abonado:"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_paid_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_paid_amount_title"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Abono"
            android:textSize="28sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_paid_amount"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Ubicación:"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_location_title"
            app:layout_constraintLeft_toLeftOf="parent">
        </fragment>

        <TextView
            android:id="@+id/tv_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_fragment"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Detalles adicionales:"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details_title"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:text="Detalles adicionales"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/tv_details"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>