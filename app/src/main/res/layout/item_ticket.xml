<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_ticket"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ticket_expired"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tv_ticket_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_ticket"
        app:layout_constraintLeft_toLeftOf="@id/iv_ticket"
        android:layout_margin="60dp"
        android:text="FB-07032315"
        android:textColor="#2A06C2"/>

    <TextView
        android:id="@+id/tv_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/iv_ticket"
        app:layout_constraintLeft_toLeftOf="@id/iv_ticket"
        android:layout_marginTop="80dp"
        android:text="22/ABR/23"
        android:textColor="#570EAB"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/tv_event_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_event_date"
        app:layout_constraintLeft_toLeftOf="@id/iv_ticket"
        android:layout_marginTop="5dp"
        android:text="17:00 hrs"
        android:textColor="#2A06C2"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/iv_expired"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/iv_ticket"
        app:layout_constraintRight_toRightOf="@id/iv_ticket"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:alpha="0.65"
        android:src="@drawable/expired_ticket_seal"
        />
</androidx.constraintlayout.widget.ConstraintLayout>